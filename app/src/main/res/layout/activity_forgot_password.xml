<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp">

    <!-- Adicionado card container para melhor visual -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_background"
        android:padding="32dp"
        android:elevation="8dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recuperar Senha"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/green"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"/>

        <!-- Adicionado subtítulo explicativo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Digite seu e-mail para receber o link de recuperação"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_gravity="center"
            android:layout_marginBottom="32dp"
            android:gravity="center"/>

        <!-- Melhorado design do campo de e-mail -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:hint="E-mail"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:padding="16dp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Melhorado design do botão -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnResetPassword"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Enviar Link de Recuperação"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="@color/green"
            android:textColor="@color/white"
            app:cornerRadius="8dp"
            android:layout_marginBottom="16dp"/>

        <!-- Adicionado botão de voltar -->
        <TextView
            android:id="@+id/tvBackToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voltar ao login"
            android:textColor="@color/green"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"/>

    </LinearLayout>

</LinearLayout>
